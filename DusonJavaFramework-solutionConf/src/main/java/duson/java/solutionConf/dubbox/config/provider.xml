<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd  
		http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
        
        
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="dubboDemo"/>
	
<!-- 	<dubbo:registry address="multicast://224.5.6.7:1234"/> -->
	
	<!-- 使用multicast广播注册中心暴露服务地址 -->
	<!-- <dubbo:registry address="zookeeper://10.10.0.116:2181"/> -->
	<dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>
	<dubbo:registry id="leyaoRegistry" protocol="zookeeper" address="${zookeeper.xxx}" timeout="${connect.timeout}" check="false"/>

	<!-- <dubbo:monitor protocol="registry"/> -->
	
	<!-- <dubbo:protocol name="http" port="8889"/>
    <dubbo:protocol name="hessian" port="8890"/>
    <dubbo:protocol name="webservice" port="8892"/> -->

  	<dubbo:provider filter="securityFilter" retries="0" timeout="${connect.timeout}" registry="localRegistry" validation="true" />
  
	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20880"/>
	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="duson.java.solutionConf.dubbox.service.DemoService" ref="demoService" protocol="dubbo" />
	
	<!-- REST服务 -->
    <dubbo:protocol name="rest" port="8080" register="false" threads="500" contextpath="" server="servlet" accepts="500" extension="..." />
	<dubbo:service interface="duson.java.solutionConf.dubbox.service.DemoService" ref="demoService" protocol="rest" />
	
	<!-- 和本地bean一样实现服务 -->
	<bean id="demoService" class="duson.java.solutionConf.dubbox.service.impl.DemoServiceImpl"/>

	<dubbo:consumer check="false" validation="true" />

</beans>
